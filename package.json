{
  "name": "brickbot",
  "version": "2.0.0",
  "description": "Personal data collection and recaps using Notion and Google Calendar",
  "main": "src/index.js",
  "scripts": {
    "collect": "node cli/collect-data.js",
    "update": "node cli/update-calendar.js",
    "summarize": "node cli/summarize-week.js",
    "tokens:check": "node cli/tokens/check.js",
    "tokens:refresh": "node cli/tokens/refresh.js",
    "tokens:setup": "node cli/tokens/setup.js",
    "verify:config": "node -e \"const m = require('./src/config/calendar/mappings'); const u = require('./src/config/unified-sources'); console.log(u.verifyDerivation(m.PERSONAL_RECAP_SOURCES, m.WORK_RECAP_SOURCES))\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "notion",
    "productivity",
    "automation",
    "oura",
    "sleep"
  ],
  "author": "Jon Brick",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.53.0",
    "@notionhq/client": "^3.1.3",
    "applescript": "^1.0.0",
    "axios": "^1.12.2",
    "dotenv": "^16.5.0",
    "googleapis": "^150.0.1",
    "inquirer": "^8.2.5",
    "node-fetch": "^2.7.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
