###################################################

# Brickbot Environment Configuration

###################################################

# Copy this file to .env and fill in your actual values

# See SETUP.md for detailed setup instructions

# See EXTERNAL_SERVICES_SETUP.md for API credential setup

###################################################

# Core API Credentials

###################################################

# Notion API Token (Required)

# Get from: https://www.notion.so/my-integrations

NOTION_TOKEN=secret_your_notion_integration_token

# Anthropic Claude API Key (Required for AI features)

# Get from: https://console.anthropic.com/

ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

###################################################

# Notion Database IDs (Required)

###################################################

# Core databases - at least one required

# Get database IDs from Notion URLs: notion.so/workspace/{DATABASE_ID}?v=...

# All databases must be shared with your Notion integration

# GitHub PRs Database

NOTION_PRS_DATABASE_ID=your_32_character_prs_database_id

# Strava Workouts Database

NOTION_WORKOUTS_DATABASE_ID=your_32_character_workouts_database_id

# Oura Sleep Database

NOTION_SLEEP_DATABASE_ID=your_32_character_sleep_database_id

# Withings Body Weight Database

NOTION_BODY_WEIGHT_DATABASE_ID=your_32_character_body_weight_database_id

# Steam Video Games Database

NOTION_VIDEO_GAMES_DATABASE_ID=your_32_character_video_games_database_id

# Tasks Database (for Apple Notes sweep)

TASKS_DATABASE_ID=your_32_character_tasks_database_id

# Optional: Weekly/Monthly tracking databases

WEEKS_DATABASE_ID=your_32_character_weeks_database_id
RECAP_DATABASE_ID=your_32_character_recap_database_id
RECAP_MONTHS_DATABASE_ID=your_32_character_recap_months_database_id
ROCKS_DATABASE_ID=your_32_character_rocks_database_id
EVENTS_DATABASE_ID=your_32_character_events_database_id

###################################################

# Google Calendar OAuth (Personal Account)

###################################################

# Required for calendar sync functionality

# Setup: https://console.cloud.google.com/

# Run: yarn tokens:setup to generate REFRESH_TOKEN

PERSONAL_GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
PERSONAL_GOOGLE_CLIENT_SECRET=your_client_secret
PERSONAL_GOOGLE_REFRESH_TOKEN=your_refresh_token
GOOGLE_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob

###################################################

# Google Calendar IDs

###################################################

# Get calendar IDs from Google Calendar settings > Integrate calendar

# Format: xxxxxxxxxxxxx@group.calendar.google.com (or 'primary' for main calendar)

# Main calendars

PERSONAL_MAIN_CALENDAR_ID=primary
WORK_MAIN_CALENDAR_ID=your_work_main_calendar_id@group.calendar.google.com

# PR calendars

PERSONAL_PRS_CALENDAR_ID=your_personal_prs_calendar_id@group.calendar.google.com
WORK_PRS_CALENDAR_ID=your_work_prs_calendar_id@group.calendar.google.com

# Activity calendars

FITNESS_CALENDAR_ID=your_fitness_calendar_id@group.calendar.google.com
NORMAL_WAKE_UP_CALENDAR_ID=your_normal_wake_up_calendar_id@group.calendar.google.com
SLEEP_IN_CALENDAR_ID=your_sleep_in_calendar_id@group.calendar.google.com
BODY_WEIGHT_CALENDAR_ID=your_body_weight_calendar_id@group.calendar.google.com
VIDEO_GAMES_CALENDAR_ID=your_video_games_calendar_id@group.calendar.google.com
READING_CALENDAR_ID=your_reading_calendar_id@group.calendar.google.com
CODING_CALENDAR_ID=your_coding_calendar_id@group.calendar.google.com
ART_CALENDAR_ID=your_art_calendar_id@group.calendar.google.com

###################################################

# GitHub API (Optional)

###################################################

# Required for GitHub PR and commit tracking

# Get from: https://github.com/settings/tokens

# Required scopes: repo, read:user

GITHUB_TOKEN=ghp_your_github_personal_access_token
GITHUB_USERNAME=your_github_username

###################################################

# Oura Ring API (Optional)

###################################################

# Required for sleep tracking

# Get from: https://cloud.ouraring.com/personal-access-tokens

OURA_TOKEN=your_oura_personal_access_token

###################################################

# Strava API (Optional)

###################################################

# Required for workout/fitness tracking

# Setup: https://www.strava.com/settings/api

# Run: yarn tokens:setup to complete OAuth flow

STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret
STRAVA_REDIRECT_URI=http://localhost:3000/callback

# Auto-populated by yarn tokens:setup

STRAVA_ACCESS_TOKEN=your_strava_access_token
STRAVA_REFRESH_TOKEN=your_strava_refresh_token
STRAVA_TOKEN_EXPIRY=timestamp_in_seconds

###################################################

# Steam API (Optional)

###################################################

# Required for gaming activity tracking

# Get API key from: https://steamcommunity.com/dev/apikey

# Find Steam ID from your profile URL

STEAM_URL=your_steam_lambda_function_url

###################################################

# Withings API (Optional)

###################################################

# Required for body weight/metrics tracking

# Setup: https://developer.withings.com/

# Run: yarn tokens:setup to complete OAuth flow

WITHINGS_CLIENT_ID=your_withings_client_id
WITHINGS_CLIENT_SECRET=your_withings_client_secret
WITHINGS_REDIRECT_URI=http://localhost:3000/callback

# Auto-populated by yarn tokens:setup

WITHINGS_ACCESS_TOKEN=your_withings_access_token
WITHINGS_REFRESH_TOKEN=your_withings_refresh_token
WITHINGS_TOKEN_EXPIRY=timestamp_in_seconds

###################################################

# Google Calendar OAuth (Work Account - Optional)

###################################################

# Only needed if tracking work calendar separately

# Same setup process as personal account

WORK_GOOGLE_CLIENT_ID=your_work_client_id.apps.googleusercontent.com
WORK_GOOGLE_CLIENT_SECRET=your_work_client_secret
WORK_GOOGLE_REFRESH_TOKEN=your_work_refresh_token

###################################################

# Apple Notes Configuration (Optional)

###################################################

# Used by sweep-notes command to transform notes into tasks

# No API required - uses AppleScript locally

APPLE_NOTES_FOLDER=Quick Capture
APPLE_NOTES_PROCESSED_TAG=âœ… Processed
APPLE_NOTES_BATCH_SIZE=50

###################################################

# Claude AI Configuration (Optional)

###################################################

# Advanced settings for Claude AI

# Defaults are optimized for task categorization and insights

CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=1.0

###################################################

# General Settings (Optional)

###################################################

NODE_ENV=production
DEBUG_API_CALLS=false
TRACK_COSTS=false
